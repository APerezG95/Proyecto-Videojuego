	}
	for (int i = 15; i < 20; i++) {
		for (int j = 10; j < 15; j++) {
			m_Board[i][j] = new CNada;
		}
	}
	for (int i = 10; i < 15; i++) {
		for (int j = 0; j < 5; j++) {
			m_Board[i][j] = new CNada;
		}
	}

	delete m_Board[11][1];
