		for (int j = 5; j < 20; j++) {
			m_Board[i][j] = new CNada;
		}
	}

	delete m_Board[3][8];
	delete m_Board[4][8];
	delete m_Board[3][9];
	delete m_Board[4][9];

	m_Board[3][8] = new CInaccesible;
	m_Board[4][8] = new CInaccesible;
	m_Board[3][9] = new CInaccesible;
	m_Board[4][9] = new CInaccesible;

