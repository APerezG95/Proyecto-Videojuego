CMapa::CMapa() :hud("imagenes/hud.png") {
	for (int i = 0; i < 5; i++) {
		for (int j = 0; j < 5; j++) {
			m_Board[i][j] = new CInaccesible;
		}
	}
	for (int i = 15; i < 20; i++) {
		for (int j = 0; j < 10; j++) {
			m_Board[i][j] = new CInaccesible;
		}
	}
	for (int i = 15; i < 20; i++) {
